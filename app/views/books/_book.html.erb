<div class="book">
  <div class="col-xs-6 col-md-4 abook">
    <div class="row thumbnail abox">
      <div class="col-md-6 img-responsive">
        <%= link_to image_tag(book.picture, alt: book.title), book,
          size: Settings.picture_size, class: "img-responsive" %>
      </div>
      <div class="col-md-6 text-center">
        <p><b><%= link_to book.title, book %></b></p>
        <p><%= book.category.name %></p>
        <p><%= book.author %></p>
        <p><%= book.publish_date %></p>
        <p><%= book.number_of_page %></p>
        <p><%= book.avg_rate %></p>
      </div>
    </div>
  </div>
</div>
