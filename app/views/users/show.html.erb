<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? &&
      !current_user.current_user?(@user) %>
    <% if @user.activities.any? %>
      <h3><%= t "user.activity" %> (<%= @user.activities.count %>)</h3>
      <ol class="activities">
        <%= render @activities %>
      </ol>
      <%= will_paginate @activities %>
    <% end %>
  </div>
  <h3 class="text-center">
    <a data-toggle="collapse" href="#collapse1"><%= t "book.see_favorite" %></a>
  </h3>
  <section id="collapse1" class="row panel-collapse collapse">
    <%= render partial: "books/index_favorite",
      locals: {books_favorite: @books_favorite} %>
  </section>
</div>
